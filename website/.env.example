# Dawson Framework Website - Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# REQUIRED - Core functionality
# =============================================================================

# Supabase - Database and Auth
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Anthropic - AI Generation
ANTHROPIC_API_KEY=sk-ant-your-key

# Site URL - Used for links in responses
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# OPTIONAL - Enhanced features
# =============================================================================

# Upstash Redis - Rate limiting (recommended for production)
# Without this, rate limiting uses in-memory storage (resets on restart)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Admin API - Access to usage stats
ADMIN_API_KEY=your-admin-key

# =============================================================================
# OPTIONAL - Cost control
# =============================================================================

# Token budget limits (defaults shown)
DAILY_TOKEN_LIMIT=1000000
MONTHLY_TOKEN_LIMIT=20000000
COST_ALERT_THRESHOLD=80

# =============================================================================
# OPTIONAL - Collaboration (not required for standard use)
# =============================================================================

# WebSocket URL for real-time collaboration
NEXT_PUBLIC_COLLABORATION_WS=ws://localhost:1234/collaborate
COLLABORATION_PORT=1234
COLLABORATION_HOST=0.0.0.0
