{
  "id": "supabase",
  "name": "Supabase Auth",
  "category": "auth",
  "version": "1.0.0",
  "description": "Authentication with Supabase including email/password, OAuth, and session management",
  "files": [
    {
      "path": "lib/supabase/client.ts",
      "template": "lib/client.ts",
      "transform": "none"
    },
    {
      "path": "lib/supabase/server.ts",
      "template": "lib/server.ts",
      "transform": "none"
    },
    {
      "path": "lib/supabase/index.ts",
      "template": "lib/index.ts",
      "transform": "none"
    },
    {
      "path": "lib/supabase/middleware.ts",
      "template": "lib/middleware.ts",
      "transform": "none"
    },
    {
      "path": "middleware.ts",
      "template": "middleware.ts",
      "transform": "none"
    },
    {
      "path": "components/auth/LoginForm.tsx",
      "template": "components/LoginForm.tsx",
      "transform": "none"
    },
    {
      "path": "components/auth/SignupForm.tsx",
      "template": "components/SignupForm.tsx",
      "transform": "none"
    },
    {
      "path": "components/auth/UserMenu.tsx",
      "template": "components/UserMenu.tsx",
      "transform": "none"
    },
    {
      "path": "components/auth/AuthProvider.tsx",
      "template": "components/AuthProvider.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useAuth.ts",
      "template": "hooks/useAuth.ts",
      "transform": "none"
    },
    {
      "path": "app/(auth)/login/page.tsx",
      "template": "app/login/page.tsx",
      "transform": "mustache"
    },
    {
      "path": "app/(auth)/signup/page.tsx",
      "template": "app/signup/page.tsx",
      "transform": "mustache"
    },
    {
      "path": "app/(auth)/layout.tsx",
      "template": "app/auth-layout.tsx",
      "transform": "none"
    },
    {
      "path": "app/auth/callback/route.ts",
      "template": "app/callback/route.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "@supabase/supabase-js": "^2.45.0",
      "@supabase/ssr": "^0.5.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "NEXT_PUBLIC_SUPABASE_URL",
        "description": "Your Supabase project URL",
        "required": true,
        "example": "https://your-project.supabase.co",
        "public": true
      },
      {
        "name": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "description": "Your Supabase anonymous/public key",
        "required": true,
        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "public": true
      },
      {
        "name": "SUPABASE_SERVICE_ROLE_KEY",
        "description": "Your Supabase service role key (server-side only)",
        "required": false,
        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
        "public": false
      }
    ]
  },
  "postInstall": [
    "1. Go to https://supabase.com/dashboard and create a project",
    "2. Copy your project URL and anon key from Settings > API",
    "3. Add them to your .env.local file",
    "4. Enable Email Auth in Authentication > Providers",
    "5. (Optional) Enable OAuth providers like Google or GitHub"
  ],
  "mergeInto": [
    {
      "file": "app/layout.tsx",
      "type": "provider",
      "content": "<AuthProvider>",
      "position": "wrap-children"
    }
  ]
}

