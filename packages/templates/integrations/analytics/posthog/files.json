{
  "id": "posthog",
  "name": "PostHog",
  "category": "analytics",
  "version": "1.0.0",
  "description": "Product analytics with PostHog including events, feature flags, and session recordings",
  "files": [
    {
      "path": "lib/analytics/posthog.ts",
      "template": "lib/posthog.ts",
      "transform": "none"
    },
    {
      "path": "components/analytics/PostHogProvider.tsx",
      "template": "components/PostHogProvider.tsx",
      "transform": "none"
    },
    {
      "path": "components/analytics/PostHogPageView.tsx",
      "template": "components/PostHogPageView.tsx",
      "transform": "none"
    },
    {
      "path": "hooks/useAnalytics.ts",
      "template": "hooks/useAnalytics.ts",
      "transform": "none"
    },
    {
      "path": "hooks/useFeatureFlag.ts",
      "template": "hooks/useFeatureFlag.ts",
      "transform": "none"
    }
  ],
  "dependencies": {
    "npm": {
      "posthog-js": "^1.100.0"
    },
    "npmDev": {},
    "env": [
      {
        "name": "NEXT_PUBLIC_POSTHOG_KEY",
        "description": "Your PostHog project API key",
        "required": true,
        "example": "phc_...",
        "public": true
      },
      {
        "name": "NEXT_PUBLIC_POSTHOG_HOST",
        "description": "PostHog host (use https://app.posthog.com for cloud)",
        "required": false,
        "example": "https://app.posthog.com",
        "public": true
      }
    ]
  },
  "postInstall": [
    "1. Sign up at https://posthog.com",
    "2. Create a project and copy your API key",
    "3. Add PostHogProvider to your root layout",
    "4. (Optional) Set up feature flags for A/B testing"
  ],
  "mergeInto": [
    {
      "file": "app/layout.tsx",
      "type": "provider",
      "content": "<PostHogProvider>",
      "position": "wrap-children"
    }
  ]
}

