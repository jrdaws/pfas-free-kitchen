{
  "id": "trigger",
  "name": "Trigger.dev",
  "category": "backgroundJobs",
  "description": "Background jobs and scheduled tasks for Next.js",
  "files": [
    { "path": "lib/trigger/client.ts", "template": "lib/client.ts" },
    { "path": "lib/trigger/tasks.ts", "template": "lib/tasks.ts" },
    { "path": "app/api/trigger/route.ts", "template": "app/api/trigger/route.ts" },
    { "path": "trigger.config.ts", "template": "trigger.config.ts" },
    { "path": "jobs/example-job.ts", "template": "jobs/example-job.ts" },
    { "path": "jobs/scheduled-job.ts", "template": "jobs/scheduled-job.ts" }
  ],
  "dependencies": {
    "npm": {
      "@trigger.dev/sdk": "^3.0.0",
      "@trigger.dev/nextjs": "^3.0.0"
    },
    "env": [
      "TRIGGER_API_KEY",
      "TRIGGER_API_URL"
    ]
  },
  "postInstall": "Run `npx trigger.dev@latest init` to complete setup"
