{
  "id": "sendgrid",
  "name": "SendGrid",
  "category": "email",
  "description": "Enterprise email delivery and marketing platform",
  "files": [
    { "path": "lib/sendgrid.ts", "template": "lib/sendgrid.ts" },
    { "path": "lib/send-email.ts", "template": "lib/send-email.ts" },
    { "path": "app/api/email/send/route.ts", "template": "app/api/email/route.ts" },
    { "path": "emails/WelcomeEmail.tsx", "template": "emails/WelcomeEmail.tsx" },
    { "path": "emails/PasswordResetEmail.tsx", "template": "emails/PasswordResetEmail.tsx" },
    { "path": "emails/InvoiceEmail.tsx", "template": "emails/InvoiceEmail.tsx" }
  ],
  "dependencies": {
    "npm": {
      "@sendgrid/mail": "^8.1.0",
      "@react-email/components": "^0.0.12",
      "react-email": "^2.0.0"
    },
    "env": [
      "SENDGRID_API_KEY",
      "SENDGRID_FROM_EMAIL",
      "SENDGRID_FROM_NAME"
    ]
  },
  "postInstall": "Verify your sender identity at https://app.sendgrid.com/settings/sender_auth"
}

