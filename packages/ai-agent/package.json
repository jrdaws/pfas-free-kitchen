{
  "name": "@dawson-framework/ai-agent",
  "version": "0.1.0",
  "description": "AI-powered project generation for Dawson Framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run copy-prompts",
    "copy-prompts": "mkdir -p dist/prompts && cp src/prompts/*.md dist/prompts/",
    "dev": "tsc --watch",
    "test": "node --test tests/**/*.test.mjs",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ai",
    "code-generation",
    "project-scaffolding",
    "nextjs",
    "anthropic",
    "claude",
    "dawson-framework"
  ],
  "author": "Dawson Framework Team",
  "license": "MIT"
}
