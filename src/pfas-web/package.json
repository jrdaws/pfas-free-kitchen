{
  "name": "@pfas-free-kitchen/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:e2e": "playwright test --project=chromium",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:a11y": "playwright test tests/accessibility.spec.ts",
    "test:disclosure": "playwright test tests/disclosure-audit.spec.ts",
    "test:perf": "playwright test --project=performance",
    "test:journeys": "playwright test tests/journeys",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report test-results/html",
    "lighthouse": "npx tsx scripts/run-lighthouse.ts",
    "lighthouse:ci": "npx @lhci/cli autorun",
    "validate": "npx tsx scripts/validation-report.ts",
    "validate:quick": "npm run typecheck && npm run lint && npm run build",
    "precommit": "npm run typecheck && npm run lint"
  },
  "dependencies": {
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.1.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-accordion": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "@playwright/test": "^1.41.0",
    "@axe-core/playwright": "^4.8.0",
    "lighthouse": "^11.4.0"
  }
}
