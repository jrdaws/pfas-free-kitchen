{
  "name": "@pfas-free-kitchen/api",
  "version": "0.1.0",
  "description": "PFAS-Free Kitchen Platform API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "playwright test --project=accessibility",
    "validate:data": "tsx scripts/validate-data-quality.ts",
    "db:migrate:test": "tsx scripts/migrate-test.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:verify": "tsx scripts/verify-seed.ts",
    "db:reset": "npm run db:migrate && npm run db:seed && npm run db:verify",
    "search:setup": "tsx scripts/setup-search-index.ts create"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.3.0",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "@opensearch-project/opensearch": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@playwright/test": "^1.40.0"
  }
}
