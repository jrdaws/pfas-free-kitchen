{
  "all": true,
  "include": [
    "src/**/*.mjs",
    "bin/framework.js"
  ],
  "exclude": [
    "tests/**",
    "scripts/**",
    "node_modules/**",
    "website/**",
    "templates/**",
    "**/*.test.mjs"
  ],
  "reporter": [
    "text",
    "lcov",
    "html"
  ],
  "check-coverage": true,
  "lines": 60,
  "functions": 50,
  "branches": 50,
  "statements": 60
}
