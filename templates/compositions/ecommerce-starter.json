{
  "$schema": "../patterns/composition.schema.json",
  "id": "ecommerce-starter",
  "name": "E-commerce Starter",
  "description": "Online store with product catalog and checkout",
  "version": "1.0.0",
  "pages": [
    {
      "path": "/",
      "title": "Home",
      "layout": "marketing",
      "slots": [
        {
          "slot": "hero",
          "pattern": "hero-split",
          "reason": "Split hero to showcase featured products"
        },
        {
          "slot": "features",
          "pattern": "features-grid",
          "reason": "Highlight benefits like free shipping, returns"
        },
        {
          "slot": "testimonials",
          "pattern": "testimonials-grid",
          "reason": "Customer reviews build purchase confidence"
        },
        {
          "slot": "cta",
          "pattern": "cta-newsletter",
          "reason": "Email capture for promotions"
        }
      ]
    },
    {
      "path": "/products",
      "title": "Products",
      "layout": "marketing",
      "slots": []
    },
    {
      "path": "/products/[id]",
      "title": "Product Detail",
      "layout": "marketing",
      "dynamic": true,
      "slots": []
    },
    {
      "path": "/cart",
      "title": "Cart",
      "layout": "marketing",
      "slots": []
    },
    {
      "path": "/checkout",
      "title": "Checkout",
      "layout": "checkout",
      "slots": []
    }
  ],
  "layouts": {
    "marketing": {
      "component": "marketing-layout",
      "config": {
        "navItems": [
          { "label": "Shop", "href": "/products" },
          { "label": "About", "href": "/about" },
          { "label": "Contact", "href": "/contact" }
        ],
        "ctaText": "Cart",
        "ctaHref": "/cart"
      }
    },
    "checkout": {
      "component": null,
      "config": {}
    }
  },
  "theme": {
    "primaryColor": "#059669",
    "style": "clean"
  }
}

