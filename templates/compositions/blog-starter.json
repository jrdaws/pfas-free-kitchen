{
  "$schema": "../patterns/composition.schema.json",
  "id": "blog-starter",
  "name": "Blog Starter",
  "description": "Personal or company blog with newsletter",
  "version": "1.0.0",
  "pages": [
    {
      "path": "/",
      "title": "Home",
      "layout": "marketing",
      "slots": [
        {
          "slot": "hero",
          "pattern": "hero-centered",
          "reason": "Simple centered hero for blog branding"
        },
        {
          "slot": "cta",
          "pattern": "cta-newsletter",
          "reason": "Newsletter signup to build audience"
        }
      ]
    },
    {
      "path": "/blog",
      "title": "Blog",
      "layout": "marketing",
      "slots": []
    },
    {
      "path": "/blog/[slug]",
      "title": "Blog Post",
      "layout": "docs",
      "dynamic": true,
      "slots": []
    },
    {
      "path": "/about",
      "title": "About",
      "layout": "marketing",
      "slots": [
        {
          "slot": "content",
          "pattern": "features-alternating",
          "reason": "Tell the story with alternating sections"
        }
      ]
    }
  ],
  "layouts": {
    "marketing": {
      "component": "marketing-layout",
      "config": {
        "navItems": [
          { "label": "Blog", "href": "/blog" },
          { "label": "About", "href": "/about" }
        ],
        "ctaText": "Subscribe",
        "ctaHref": "#newsletter"
      }
    },
    "docs": {
      "component": "docs-layout",
      "config": {}
    }
  },
  "theme": {
    "primaryColor": "#0ea5e9",
    "style": "minimal"
  }
}

