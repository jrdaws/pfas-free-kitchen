"use client";

import { useState } from "react";
import Link from "next/link";
import { usePathname } from "next/navigation";
import Image from "next/image";
import {
  Home, LayoutDashboard, Settings, HelpCircle, Menu,
  Users, FileText, BarChart, Bell, Folder, CreditCard,
  type LucideIcon,
} from "lucide-react";

const iconMap: Record<string, LucideIcon> = {
  home: Home,
  dashboard: LayoutDashboard,
  settings: Settings,
  "help-circle": HelpCircle,
  users: Users,
  file: FileText,
  chart: BarChart,
  bell: Bell,
  folder: Folder,
  billing: CreditCard,
};

interface NavItem {
  label: string;
  href: string;
  icon: string;
}

interface SidebarProps {
  logoText?: string;
  logoSrc?: string;
  navItems?: NavItem[];
  bottomItems?: NavItem[];
  collapsible?: boolean;
}

const defaultNavItems: NavItem[] = [
  {{#each navItems}}
  { label: "{{this.label}}", href: "{{this.href}}", icon: "{{this.icon}}" },
  {{/each}}
];

const defaultBottomItems: NavItem[] = [
  {{#each bottomItems}}
  { label: "{{this.label}}", href: "{{this.href}}", icon: "{{this.icon}}" },
  {{/each}}
];

export function Sidebar({
  logoText = "{{logoText}}",
  logoSrc = "{{logoSrc}}",
  navItems = defaultNavItems,
  bottomItems = defaultBottomItems,
  collapsible = {{collapsible}},
}: SidebarProps) {
  const pathname = usePathname();
  const [isCollapsed, setIsCollapsed] = useState(false);

  const renderNavItem = (item: NavItem) => {
    const Icon = iconMap[item.icon] || Home;
    const isActive = pathname === item.href || pathname?.startsWith(`${item.href}/`);

    return (
      <Link
        key={item.href}
        href={item.href}
        className={`flex items-center gap-3 px-3 py-2 rounded-lg transition-colors ${
          isActive
            ? "bg-primary/10 text-primary"
            : "text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800"
        }`}
      >
        <Icon className="w-5 h-5 flex-shrink-0" />
        {!isCollapsed && (
          <span className="font-medium">{item.label}</span>
        )}
      </Link>
    );
  };

  return (
    <aside
      className={`flex flex-col h-screen bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 transition-all ${
        isCollapsed ? "w-16" : "w-64"
      }`}
    >
      {/* Header */}
      <div className="flex items-center justify-between h-16 px-4 border-b border-gray-200 dark:border-gray-800">
        {!isCollapsed && (
          <Link href="/" className="flex items-center gap-2">
            {logoSrc ? (
              <Image src={logoSrc} alt={logoText} width={28} height={28} />
            ) : (
              <span className="text-lg font-bold text-gray-900 dark:text-white">
                {logoText}
              </span>
            )}
          </Link>
        )}
        
        {collapsible && (
          <button
            onClick={() => setIsCollapsed(!isCollapsed)}
            className="p-2 text-gray-500 hover:text-gray-700 dark:hover:text-gray-300"
            aria-label={isCollapsed ? "Expand sidebar" : "Collapse sidebar"}
          >
            <Menu className="w-5 h-5" />
          </button>
        )}
      </div>

      {/* Main navigation */}
      <nav className="flex-1 p-4 space-y-1 overflow-y-auto">
        {navItems.map(renderNavItem)}
      </nav>

      {/* Bottom navigation */}
      {bottomItems.length > 0 && (
        <div className="p-4 border-t border-gray-200 dark:border-gray-800 space-y-1">
          {bottomItems.map(renderNavItem)}
        </div>
      )}
    </aside>
  );
}

export default Sidebar;

