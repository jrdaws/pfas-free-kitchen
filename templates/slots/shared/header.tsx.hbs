"use client";

import { useState } from "react";
import Link from "next/link";
import Image from "next/image";
import { Menu, X } from "lucide-react";

interface NavItem {
  label: string;
  href: string;
}

interface HeaderProps {
  logoText?: string;
  logoSrc?: string;
  navItems?: NavItem[];
  ctaText?: string;
  ctaLink?: string;
  sticky?: boolean;
}

const defaultNavItems: NavItem[] = [
  {{#each navItems}}
  { label: "{{this.label}}", href: "{{this.href}}" },
  {{/each}}
];

export function Header({
  logoText = "{{logoText}}",
  logoSrc = "{{logoSrc}}",
  navItems = defaultNavItems,
  ctaText = "{{ctaText}}",
  ctaLink = "{{ctaLink}}",
  sticky = {{sticky}},
}: HeaderProps) {
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  return (
    <header
      className={`w-full bg-white dark:bg-gray-900 border-b border-gray-100 dark:border-gray-800 z-50 ${
        sticky ? "sticky top-0" : ""
      }`}
    >
      <nav className="container mx-auto px-4">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <Link href="/" className="flex items-center gap-2">
            {logoSrc ? (
              <Image src={logoSrc} alt={logoText} width={32} height={32} />
            ) : (
              <span className="text-xl font-bold text-gray-900 dark:text-white">
                {logoText}
              </span>
            )}
          </Link>

          {/* Desktop Navigation */}
          <div className="hidden md:flex items-center gap-8">
            {navItems.map((item) => (
              <Link
                key={item.href}
                href={item.href}
                className="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors"
              >
                {item.label}
              </Link>
            ))}
          </div>

          {/* Desktop CTA */}
          <div className="hidden md:flex items-center gap-4">
            <Link
              href={ctaLink}
              className="px-4 py-2 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition-colors"
            >
              {ctaText}
            </Link>
          </div>

          {/* Mobile menu button */}
          <button
            onClick={() => setIsMenuOpen(!isMenuOpen)}
            className="md:hidden p-2 text-gray-600 dark:text-gray-300"
            aria-label="Toggle menu"
          >
            {isMenuOpen ? <X className="w-6 h-6" /> : <Menu className="w-6 h-6" />}
          </button>
        </div>

        {/* Mobile menu */}
        {isMenuOpen && (
          <div className="md:hidden py-4 border-t border-gray-100 dark:border-gray-800">
            <div className="flex flex-col gap-4">
              {navItems.map((item) => (
                <Link
                  key={item.href}
                  href={item.href}
                  className="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white"
                  onClick={() => setIsMenuOpen(false)}
                >
                  {item.label}
                </Link>
              ))}
              <Link
                href={ctaLink}
                className="inline-flex justify-center px-4 py-2 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition-colors"
                onClick={() => setIsMenuOpen(false)}
              >
                {ctaText}
              </Link>
            </div>
          </div>
        )}
      </nav>
    </header>
  );
}

export default Header;

