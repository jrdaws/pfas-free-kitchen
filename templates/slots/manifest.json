{
  "$schema": "./manifest.schema.json",
  "version": "1.0.0",
  "description": "Component slot templates for the visual page builder",
  "slotTypes": {
    "shared": {
      "icon": "üîó",
      "description": "Inherited from layout (header, footer, nav)"
    },
    "ai-generated": {
      "icon": "ü§ñ",
      "description": "User provides prompt, AI fills content"
    },
    "static": {
      "icon": "üìù",
      "description": "Pre-built component from library"
    },
    "custom": {
      "icon": "‚öôÔ∏è",
      "description": "User will implement manually after export"
    }
  },
  "categories": {
    "hero": {
      "label": "Hero Sections",
      "description": "Top-of-page impact sections",
      "icon": "star"
    },
    "features": {
      "label": "Feature Showcases",
      "description": "Product/service feature displays",
      "icon": "grid"
    },
    "pricing": {
      "label": "Pricing Tables",
      "description": "Plan comparison and pricing",
      "icon": "dollar-sign"
    },
    "testimonials": {
      "label": "Testimonials",
      "description": "Social proof and reviews",
      "icon": "message-circle"
    },
    "cta": {
      "label": "Call to Action",
      "description": "Conversion-focused sections",
      "icon": "arrow-right"
    },
    "faq": {
      "label": "FAQ Sections",
      "description": "Frequently asked questions",
      "icon": "help-circle"
    },
    "shared": {
      "label": "Shared Components",
      "description": "Header, footer, navigation",
      "icon": "layout"
    }
  },
  "slots": [
    {
      "id": "hero-simple",
      "name": "Simple Hero",
      "category": "hero",
      "description": "Clean hero section with headline, subtext, and CTA",
      "template": "hero/hero-simple.tsx.hbs",
      "thumbnail": "/images/slots/hero-simple.png",
      "source": "static",
      "variables": [
        { "name": "headline", "type": "string", "required": true, "aiGenerate": true, "description": "Main headline (5-10 words)" },
        { "name": "subtext", "type": "string", "required": true, "aiGenerate": true, "description": "Supporting text (15-25 words)" },
        { "name": "ctaText", "type": "string", "default": "Get Started", "description": "Primary button text" },
        { "name": "ctaLink", "type": "string", "default": "/signup", "description": "Primary button link" },
        { "name": "secondaryCtaText", "type": "string", "default": "", "description": "Secondary button text (optional)" },
        { "name": "secondaryCtaLink", "type": "string", "default": "", "description": "Secondary button link" }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "hero-with-image",
      "name": "Hero with Image",
      "category": "hero",
      "description": "Hero section with side-by-side text and image",
      "template": "hero/hero-with-image.tsx.hbs",
      "thumbnail": "/images/slots/hero-with-image.png",
      "source": "static",
      "variables": [
        { "name": "headline", "type": "string", "required": true, "aiGenerate": true },
        { "name": "subtext", "type": "string", "required": true, "aiGenerate": true },
        { "name": "ctaText", "type": "string", "default": "Get Started" },
        { "name": "ctaLink", "type": "string", "default": "/signup" },
        { "name": "imageSrc", "type": "string", "default": "/images/hero.png", "description": "Hero image URL" },
        { "name": "imageAlt", "type": "string", "default": "Product screenshot" },
        { "name": "imagePosition", "type": "enum", "options": ["left", "right"], "default": "right" }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "hero-gradient",
      "name": "Gradient Hero",
      "category": "hero",
      "description": "Bold hero with gradient background",
      "template": "hero/hero-gradient.tsx.hbs",
      "thumbnail": "/images/slots/hero-gradient.png",
      "source": "static",
      "variables": [
        { "name": "headline", "type": "string", "required": true, "aiGenerate": true },
        { "name": "subtext", "type": "string", "required": true, "aiGenerate": true },
        { "name": "ctaText", "type": "string", "default": "Start Free Trial" },
        { "name": "ctaLink", "type": "string", "default": "/signup" },
        { "name": "gradientFrom", "type": "string", "default": "#6366f1", "description": "Gradient start color" },
        { "name": "gradientTo", "type": "string", "default": "#8b5cf6", "description": "Gradient end color" }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "features-grid",
      "name": "Features Grid",
      "category": "features",
      "description": "3-column grid of feature cards with icons",
      "template": "features/features-grid.tsx.hbs",
      "thumbnail": "/images/slots/features-grid.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Features", "aiGenerate": true },
        { "name": "sectionSubtext", "type": "string", "default": "", "aiGenerate": true },
        { "name": "features", "type": "array", "aiGenerate": true, "itemSchema": {
          "title": "string",
          "description": "string",
          "icon": "string"
        }, "minItems": 3, "maxItems": 9, "description": "List of features (3-9)" }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "features-list",
      "name": "Features List",
      "category": "features",
      "description": "Vertical list with feature details",
      "template": "features/features-list.tsx.hbs",
      "thumbnail": "/images/slots/features-list.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Why Choose Us", "aiGenerate": true },
        { "name": "features", "type": "array", "aiGenerate": true, "itemSchema": {
          "title": "string",
          "description": "string",
          "icon": "string"
        }, "minItems": 3, "maxItems": 6 }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "features-cards",
      "name": "Features Cards",
      "category": "features",
      "description": "Elevated cards with hover effects",
      "template": "features/features-cards.tsx.hbs",
      "thumbnail": "/images/slots/features-cards.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Everything you need", "aiGenerate": true },
        { "name": "sectionSubtext", "type": "string", "aiGenerate": true },
        { "name": "features", "type": "array", "aiGenerate": true, "itemSchema": {
          "title": "string",
          "description": "string",
          "icon": "string",
          "link": "string"
        }, "minItems": 3, "maxItems": 6 }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "pricing-three-tier",
      "name": "Three-Tier Pricing",
      "category": "pricing",
      "description": "Classic 3-column pricing table with highlighted tier",
      "template": "pricing/pricing-three-tier.tsx.hbs",
      "thumbnail": "/images/slots/pricing-three-tier.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Simple, transparent pricing", "aiGenerate": true },
        { "name": "sectionSubtext", "type": "string", "aiGenerate": true },
        { "name": "plans", "type": "array", "aiGenerate": true, "itemSchema": {
          "name": "string",
          "price": "number",
          "interval": "string",
          "description": "string",
          "features": "array",
          "ctaText": "string",
          "popular": "boolean"
        }, "minItems": 3, "maxItems": 3 },
        { "name": "showAnnualToggle", "type": "boolean", "default": true }
      ],
      "supports": ["page", "landing", "pricing"]
    },
    {
      "id": "pricing-comparison",
      "name": "Pricing Comparison Table",
      "category": "pricing",
      "description": "Feature comparison grid across plans",
      "template": "pricing/pricing-comparison.tsx.hbs",
      "thumbnail": "/images/slots/pricing-comparison.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Compare plans", "aiGenerate": true },
        { "name": "plans", "type": "array", "itemSchema": {
          "name": "string",
          "price": "number",
          "interval": "string"
        }, "minItems": 2, "maxItems": 4 },
        { "name": "featureCategories", "type": "array", "aiGenerate": true, "itemSchema": {
          "category": "string",
          "features": "array"
        } }
      ],
      "supports": ["page", "pricing"]
    },
    {
      "id": "testimonials-carousel",
      "name": "Testimonials Carousel",
      "category": "testimonials",
      "description": "Sliding carousel of customer testimonials",
      "template": "testimonials/testimonials-carousel.tsx.hbs",
      "thumbnail": "/images/slots/testimonials-carousel.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "What our customers say", "aiGenerate": true },
        { "name": "testimonials", "type": "array", "aiGenerate": true, "itemSchema": {
          "quote": "string",
          "author": "string",
          "role": "string",
          "company": "string",
          "avatar": "string"
        }, "minItems": 3, "maxItems": 10 },
        { "name": "autoPlay", "type": "boolean", "default": true }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "testimonials-grid",
      "name": "Testimonials Grid",
      "category": "testimonials",
      "description": "Grid layout of testimonial cards",
      "template": "testimonials/testimonials-grid.tsx.hbs",
      "thumbnail": "/images/slots/testimonials-grid.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Loved by teams everywhere", "aiGenerate": true },
        { "name": "testimonials", "type": "array", "aiGenerate": true, "itemSchema": {
          "quote": "string",
          "author": "string",
          "role": "string",
          "company": "string",
          "avatar": "string",
          "rating": "number"
        }, "minItems": 3, "maxItems": 6 }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "cta-simple",
      "name": "Simple CTA",
      "category": "cta",
      "description": "Clean call-to-action with headline and button",
      "template": "cta/cta-simple.tsx.hbs",
      "thumbnail": "/images/slots/cta-simple.png",
      "source": "static",
      "variables": [
        { "name": "headline", "type": "string", "required": true, "aiGenerate": true },
        { "name": "subtext", "type": "string", "aiGenerate": true },
        { "name": "ctaText", "type": "string", "default": "Get Started", "aiGenerate": true },
        { "name": "ctaLink", "type": "string", "default": "/signup" },
        { "name": "bgColor", "type": "string", "default": "primary" }
      ],
      "supports": ["page", "landing"]
    },
    {
      "id": "cta-newsletter",
      "name": "Newsletter CTA",
      "category": "cta",
      "description": "Email signup form with headline",
      "template": "cta/cta-newsletter.tsx.hbs",
      "thumbnail": "/images/slots/cta-newsletter.png",
      "source": "static",
      "variables": [
        { "name": "headline", "type": "string", "required": true, "aiGenerate": true },
        { "name": "subtext", "type": "string", "aiGenerate": true },
        { "name": "buttonText", "type": "string", "default": "Subscribe" },
        { "name": "placeholder", "type": "string", "default": "Enter your email" },
        { "name": "showNameField", "type": "boolean", "default": false }
      ],
      "supports": ["page", "landing", "blog"]
    },
    {
      "id": "faq-accordion",
      "name": "FAQ Accordion",
      "category": "faq",
      "description": "Expandable FAQ section",
      "template": "faq/faq-accordion.tsx.hbs",
      "thumbnail": "/images/slots/faq-accordion.png",
      "source": "static",
      "variables": [
        { "name": "sectionTitle", "type": "string", "default": "Frequently Asked Questions", "aiGenerate": true },
        { "name": "sectionSubtext", "type": "string", "aiGenerate": true },
        { "name": "faqs", "type": "array", "aiGenerate": true, "itemSchema": {
          "question": "string",
          "answer": "string"
        }, "minItems": 4, "maxItems": 10 }
      ],
      "supports": ["page", "landing", "pricing"]
    },
    {
      "id": "header-simple",
      "name": "Simple Header",
      "category": "shared",
      "description": "Logo, navigation, and CTA button",
      "template": "shared/header.tsx.hbs",
      "thumbnail": "/images/slots/header-simple.png",
      "source": "shared",
      "variables": [
        { "name": "logoText", "type": "string", "default": "{{projectName}}" },
        { "name": "logoSrc", "type": "string", "default": "" },
        { "name": "navItems", "type": "array", "itemSchema": {
          "label": "string",
          "href": "string"
        }, "default": [
          { "label": "Features", "href": "#features" },
          { "label": "Pricing", "href": "/pricing" },
          { "label": "About", "href": "/about" }
        ] },
        { "name": "ctaText", "type": "string", "default": "Sign In" },
        { "name": "ctaLink", "type": "string", "default": "/login" },
        { "name": "sticky", "type": "boolean", "default": true }
      ],
      "supports": ["layout"]
    },
    {
      "id": "footer-simple",
      "name": "Simple Footer",
      "category": "shared",
      "description": "Links, copyright, and social icons",
      "template": "shared/footer.tsx.hbs",
      "thumbnail": "/images/slots/footer-simple.png",
      "source": "shared",
      "variables": [
        { "name": "companyName", "type": "string", "default": "{{projectName}}" },
        { "name": "sections", "type": "array", "itemSchema": {
          "title": "string",
          "links": "array"
        }, "default": [
          { "title": "Product", "links": [{"label": "Features", "href": "#features"}, {"label": "Pricing", "href": "/pricing"}] },
          { "title": "Company", "links": [{"label": "About", "href": "/about"}, {"label": "Blog", "href": "/blog"}] },
          { "title": "Legal", "links": [{"label": "Privacy", "href": "/privacy"}, {"label": "Terms", "href": "/terms"}] }
        ] },
        { "name": "socialLinks", "type": "array", "itemSchema": {
          "platform": "string",
          "url": "string"
        }, "default": [] },
        { "name": "showNewsletter", "type": "boolean", "default": false }
      ],
      "supports": ["layout"]
    },
    {
      "id": "sidebar-nav",
      "name": "Sidebar Navigation",
      "category": "shared",
      "description": "Vertical navigation for dashboard layouts",
      "template": "shared/sidebar.tsx.hbs",
      "thumbnail": "/images/slots/sidebar-nav.png",
      "source": "shared",
      "variables": [
        { "name": "logoText", "type": "string", "default": "{{projectName}}" },
        { "name": "logoSrc", "type": "string", "default": "" },
        { "name": "navItems", "type": "array", "itemSchema": {
          "label": "string",
          "href": "string",
          "icon": "string"
        } },
        { "name": "bottomItems", "type": "array", "itemSchema": {
          "label": "string",
          "href": "string",
          "icon": "string"
        }, "default": [
          { "label": "Settings", "href": "/settings", "icon": "settings" },
          { "label": "Help", "href": "/help", "icon": "help-circle" }
        ] },
        { "name": "collapsible", "type": "boolean", "default": true }
      ],
      "supports": ["layout", "dashboard"]
    }
  ],
  "promptTemplates": {
    "hero": "prompts/hero.prompt.md",
    "features": "prompts/features.prompt.md",
    "pricing": "prompts/pricing.prompt.md",
    "testimonials": "prompts/testimonials.prompt.md",
    "faq": "prompts/faq.prompt.md",
    "cta": "prompts/cta.prompt.md"
  }
}

