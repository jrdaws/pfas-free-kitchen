 * Features Section - List
 * 
 * Vertical list with alternating layout.
 * Generated by {{projectName}}
 */

import { 
  Zap, Shield, Rocket, Heart, Star, Check,
  type LucideIcon
} from "lucide-react";

const iconMap: Record<string, LucideIcon> = {
  zap: Zap, shield: Shield, rocket: Rocket, 
  heart: Heart, star: Star, check: Check,
};

interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface FeaturesListProps {
  sectionTitle?: string;
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {{#each features}}
  {
    title: "{{this.title}}",
    description: "{{this.description}}",
    icon: "{{this.icon}}",
  },
  {{/each}}
];

export function FeaturesList({
  sectionTitle = "{{sectionTitle}}",
  features = defaultFeatures,
}: FeaturesListProps) {
  return (
    <section className="py-20 lg:py-32">
      <div className="container mx-auto px-4">
        <div className="max-w-4xl mx-auto">
          {/* Section header */}
          <h2 className="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-12 text-center">
            {sectionTitle}
          </h2>

          {/* Features list */}
          <div className="space-y-12">
            {features.map((feature, index) => {
              const Icon = iconMap[feature.icon] || Check;
              
              return (
                <div
                  key={index}
                  className="flex gap-6 items-start"
                >
                  <div className="flex-shrink-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center">
                    <Icon className="w-6 h-6 text-white" />
                  </div>
                  <div>
                    <h3 className="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                      {feature.title}
                    </h3>
                    <p className="text-gray-600 dark:text-gray-400 leading-relaxed">
                      {feature.description}
                    </p>
                  </div>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </section>
  );
}

export default FeaturesList;

