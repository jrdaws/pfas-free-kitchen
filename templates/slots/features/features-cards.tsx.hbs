/**
 * Features Section - Cards
 * 
 * Elevated cards with hover effects and optional links.
 * Generated by {{projectName}}
 */

import Link from "next/link";
import { 
  Zap, Shield, Rocket, Heart, Star, Check, ArrowRight,
  type LucideIcon
} from "lucide-react";

const iconMap: Record<string, LucideIcon> = {
  zap: Zap, shield: Shield, rocket: Rocket, 
  heart: Heart, star: Star, check: Check,
};

interface Feature {
  title: string;
  description: string;
  icon: string;
  link?: string;
}

interface FeaturesCardsProps {
  sectionTitle?: string;
  sectionSubtext?: string;
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {{#each features}}
  {
    title: "{{this.title}}",
    description: "{{this.description}}",
    icon: "{{this.icon}}",
    link: "{{this.link}}",
  },
  {{/each}}
];

export function FeaturesCards({
  sectionTitle = "{{sectionTitle}}",
  sectionSubtext = "{{sectionSubtext}}",
  features = defaultFeatures,
}: FeaturesCardsProps) {
  return (
    <section className="py-20 lg:py-32">
      <div className="container mx-auto px-4">
        {/* Section header */}
        <div className="text-center max-w-3xl mx-auto mb-16">
          <h2 className="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            {sectionTitle}
          </h2>
          {sectionSubtext && (
            <p className="text-xl text-gray-600 dark:text-gray-300">
              {sectionSubtext}
            </p>
          )}
        </div>

        {/* Features cards */}
        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {features.map((feature, index) => {
            const Icon = iconMap[feature.icon] || Zap;
            const CardWrapper = feature.link ? Link : "div";
            
            return (
              <CardWrapper
                key={index}
                href={feature.link || "#"}
                className="group bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100 dark:border-gray-700"
              >
                <div className="w-14 h-14 bg-gradient-to-br from-primary to-primary/60 rounded-xl flex items-center justify-center mb-6">
                  <Icon className="w-7 h-7 text-white" />
                </div>
                
                <h3 className="text-xl font-bold text-gray-900 dark:text-white mb-3">
                  {feature.title}
                </h3>
                
                <p className="text-gray-600 dark:text-gray-400 mb-4">
                  {feature.description}
                </p>

                {feature.link && (
                  <span className="inline-flex items-center text-primary font-medium group-hover:gap-2 transition-all">
                    Learn more
                    <ArrowRight className="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" />
                  </span>
                )}
              </CardWrapper>
            );
          })}
        </div>
      </div>
    </section>
  );
}

export default FeaturesCards;

