/**
 * Features Section - Grid
 * 
 * 3-column grid of feature cards with icons.
 * Generated by {{projectName}}
 */

import { 
  Zap, Shield, Rocket, Heart, Star, Check, Clock, 
  Users, Settings, BarChart, Lock, Globe, MessageCircle,
  Mail, Bell, Folder, FileText, Search, Filter, Layers,
  Code, Terminal, Database, type LucideIcon
} from "lucide-react";

const iconMap: Record<string, LucideIcon> = {
  zap: Zap, shield: Shield, rocket: Rocket, heart: Heart,
  star: Star, check: Check, clock: Clock, users: Users,
  settings: Settings, chart: BarChart, lock: Lock, globe: Globe,
  message: MessageCircle, mail: Mail, bell: Bell, folder: Folder,
  file: FileText, search: Search, filter: Filter, layers: Layers,
  code: Code, terminal: Terminal, database: Database,
};

interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface FeaturesGridProps {
  sectionTitle?: string;
  sectionSubtext?: string;
  features?: Feature[];
}

const defaultFeatures: Feature[] = [
  {{#each features}}
  {
    title: "{{this.title}}",
    description: "{{this.description}}",
    icon: "{{this.icon}}",
  },
  {{/each}}
];

export function FeaturesGrid({
  sectionTitle = "{{sectionTitle}}",
  sectionSubtext = "{{sectionSubtext}}",
  features = defaultFeatures,
}: FeaturesGridProps) {
  return (
    <section className="py-20 lg:py-32 bg-gray-50 dark:bg-gray-900">
      <div className="container mx-auto px-4">
        {/* Section header */}
        <div className="text-center max-w-3xl mx-auto mb-16">
          <h2 className="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            {sectionTitle}
          </h2>
          {sectionSubtext && (
            <p className="text-xl text-gray-600 dark:text-gray-300">
              {sectionSubtext}
            </p>
          )}
        </div>

        {/* Features grid */}
        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature, index) => {
            const Icon = iconMap[feature.icon] || Zap;
            
            return (
              <div
                key={index}
                className="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow"
              >
                <div className="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <Icon className="w-6 h-6 text-primary" />
                </div>
                <h3 className="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                  {feature.title}
                </h3>
                <p className="text-gray-600 dark:text-gray-400">
                  {feature.description}
                </p>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  );
}

export default FeaturesGrid;

