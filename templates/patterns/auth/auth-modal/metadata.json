{
  "id": "auth-modal",
  "name": "Auth Modal",
  "category": "auth",
  "description": "Login/signup in modal overlay",
  "version": "1.0.0",
  "props": {
    "isOpen": {
      "type": "boolean",
      "required": true
    },
    "onClose": {
      "type": "function",
      "required": true
    },
    "mode": {
      "type": "enum",
      "options": ["login", "signup"],
      "default": "login"
    },
    "providers": {
      "type": "array",
      "default": ["google", "github"]
    },
    "companyName": {
      "type": "string",
      "default": "Company"
    }
  },
  "bestFor": ["saas", "app", "seamless"],
  "tags": ["modal", "overlay", "quick"],
  "dependencies": ["lucide-react"]
}

