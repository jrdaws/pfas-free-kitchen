{
  "id": "hero-centered",
  "name": "Centered Hero",
  "category": "landing",
  "description": "Clean centered hero with headline, subtext, and CTA buttons",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "required": true,
      "aiGenerate": true,
      "description": "Main headline (5-10 words)"
    },
    "subtext": {
      "type": "string",
      "required": true,
      "aiGenerate": true,
      "description": "Supporting text (15-25 words)"
    },
    "primaryCta": {
      "type": "object",
      "required": true,
      "properties": {
        "text": { "type": "string", "default": "Get Started" },
        "href": { "type": "string", "default": "/signup" }
      }
    },
    "secondaryCta": {
      "type": "object",
      "required": false,
      "properties": {
        "text": { "type": "string", "default": "Learn More" },
        "href": { "type": "string", "default": "#features" }
      }
    },
    "badge": {
      "type": "string",
      "required": false,
      "description": "Optional announcement badge"
    }
  },
  "bestFor": ["saas", "startup", "product"],
  "tags": ["minimal", "clean", "conversion"],
  "dependencies": []
}

