{
  "id": "hero-split",
  "name": "Split Hero",
  "category": "landing",
  "description": "Text on left, image/screenshot on right",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "required": true,
      "aiGenerate": true
    },
    "subtext": {
      "type": "string",
      "required": true,
      "aiGenerate": true
    },
    "primaryCta": {
      "type": "object",
      "required": true,
      "properties": {
        "text": { "type": "string", "default": "Start Free Trial" },
        "href": { "type": "string", "default": "/signup" }
      }
    },
    "secondaryCta": {
      "type": "object",
      "required": false
    },
    "image": {
      "type": "object",
      "required": true,
      "properties": {
        "src": { "type": "string", "default": "/images/hero-screenshot.png" },
        "alt": { "type": "string", "default": "Product screenshot" }
      }
    },
    "imagePosition": {
      "type": "enum",
      "options": ["left", "right"],
      "default": "right"
    },
    "features": {
      "type": "array",
      "required": false,
      "aiGenerate": true,
      "description": "3-5 bullet point features"
    }
  },
  "bestFor": ["saas", "b2b", "enterprise"],
  "tags": ["screenshot", "demo", "visual"],
  "dependencies": []
}

