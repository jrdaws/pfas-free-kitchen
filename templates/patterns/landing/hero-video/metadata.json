{
  "id": "hero-video",
  "name": "Video Hero",
  "category": "landing",
  "description": "Full-width video background with overlay text",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "required": true,
      "aiGenerate": true
    },
    "subtext": {
      "type": "string",
      "required": true,
      "aiGenerate": true
    },
    "primaryCta": {
      "type": "object",
      "required": true,
      "properties": {
        "text": { "type": "string", "default": "Get Started" },
        "href": { "type": "string", "default": "/signup" }
      }
    },
    "video": {
      "type": "object",
      "required": true,
      "properties": {
        "src": { "type": "string", "description": "Video URL (mp4)" },
        "poster": { "type": "string", "description": "Poster image URL" }
      }
    },
    "overlay": {
      "type": "enum",
      "options": ["dark", "gradient", "blur"],
      "default": "dark"
    },
    "showControls": {
      "type": "boolean",
      "default": true
    }
  },
  "bestFor": ["creative", "agency", "media"],
  "tags": ["video", "immersive", "dynamic"],
  "dependencies": ["lucide-react"]
}

