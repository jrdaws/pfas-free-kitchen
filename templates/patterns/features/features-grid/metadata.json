{
  "id": "features-grid",
  "name": "Features Grid",
  "category": "features",
  "description": "3-column grid with icons",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "required": true,
      "aiGenerate": true
    },
    "subtext": {
      "type": "string",
      "required": false,
      "aiGenerate": true
    },
    "features": {
      "type": "array",
      "required": true,
      "aiGenerate": true,
      "minItems": 3,
      "maxItems": 9
    },
    "columns": {
      "type": "enum",
      "options": [2, 3, 4],
      "default": 3
    }
  },
  "bestFor": ["saas", "product", "capabilities"],
  "tags": ["grid", "icons", "clean"],
  "dependencies": ["lucide-react"]
}

