{
  "id": "testimonials-logos",
  "name": "Logo Wall",
  "category": "testimonials",
  "description": "Customer logo showcase",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "default": "Trusted by industry leaders"
    },
    "subtext": {
      "type": "string",
      "required": false
    },
    "logos": {
      "type": "array",
      "required": true,
      "minItems": 4
    },
    "style": {
      "type": "enum",
      "options": ["grid", "marquee", "stacked"],
      "default": "grid"
    },
    "grayscale": {
      "type": "boolean",
      "default": true
    }
  },
  "bestFor": ["b2b", "enterprise", "trust"],
  "tags": ["logos", "brands", "trust"],
  "dependencies": []
}

