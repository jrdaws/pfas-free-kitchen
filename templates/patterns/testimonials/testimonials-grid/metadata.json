{
  "id": "testimonials-grid",
  "name": "Testimonials Grid",
  "category": "testimonials",
  "description": "Static grid of testimonials",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "default": "Loved by teams everywhere"
    },
    "subtext": {
      "type": "string",
      "required": false
    },
    "testimonials": {
      "type": "array",
      "required": true,
      "aiGenerate": true,
      "minItems": 3,
      "maxItems": 6
    },
    "columns": {
      "type": "enum",
      "options": [2, 3],
      "default": 3
    }
  },
  "bestFor": ["volume", "trust", "static"],
  "tags": ["grid", "cards", "static"],
  "dependencies": ["lucide-react"]
}

