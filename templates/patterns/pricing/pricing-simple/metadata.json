{
  "id": "pricing-simple",
  "name": "Simple Pricing",
  "category": "pricing",
  "description": "Clean 2-3 tier pricing cards",
  "version": "1.0.0",
  "props": {
    "headline": {
      "type": "string",
      "required": true,
      "aiGenerate": true,
      "default": "Simple, transparent pricing"
    },
    "subtext": {
      "type": "string",
      "required": false,
      "aiGenerate": true
    },
    "plans": {
      "type": "array",
      "required": true,
      "aiGenerate": true,
      "minItems": 2,
      "maxItems": 3
    },
    "billingPeriod": {
      "type": "enum",
      "options": ["monthly", "yearly"],
      "default": "monthly"
    }
  },
  "bestFor": ["saas", "subscription", "simple"],
  "tags": ["cards", "tiers", "monthly"],
  "dependencies": ["lucide-react"]
}

